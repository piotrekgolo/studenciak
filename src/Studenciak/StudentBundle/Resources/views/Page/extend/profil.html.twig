{% extends 'StudenciakBundle:Page:base.html.twig' %}


{% block title %}
	Profil
{% endblock %}

{% block user %}
	active
{% endblock %}
{% block profil %}
	active
{% endblock %}


{% block view %}

    <div class="db-breadcrumbs">
        <a class="db-brdcmb-item" href="{{ path('index') }}">
            <i class="icon-home"></i>
        </a>
        <a class="db-brdcmb-item" href="{{ path('profil') }}">
           Mój profil
        </a>
    </div>


   


	<h2>Mój profil</h2>

	<div class="db-profile">
		<div class="db-profile-avatar">
			<img src="{{ app.session.get('image') }}" alt="Profil">
		</div>
		<div class="db-profile-data">
			<table class="db-profile-table">
				<tr><td>Imię i nazwisko</td><td>{{ app.session.get('name') }}</td></tr>
				<tr><td>E-mail</td><td>{{ app.session.get('email') }}</td></tr>
			</table>
		</div>
	</div>



{% endblock %}
