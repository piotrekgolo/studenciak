{% extends 'StudenciakBundle:Page:base.html.twig' %}

{% block title %}Kursy{% endblock %}

{% block general %}active{% endblock %}
{% block przedmiot %}active{% endblock %}

{% block view %}
<div class="db-breadcrumbs">
    <a class="db-brdcmb-item" href="#">
        <i class="icon-home"></i>
    </a>
    <a class="db-brdcmb-item" href="#">
        Ogólne
    </a>
    <a class="db-brdcmb-item" href="#">
        Kursy
    </a>
</div>


{% if app.session.get('admin') == 1 %} 

<div class="db-logged" >
    <a href="{{path('przedmiotKursDodaj', {'id_przedmiotu': przedmiot.getIdPrzedmiotu})}}">
    <button><i class="icon-plus"></i><span>Dodaj kurs</span></button>
    </a>
</div>

{% endif %}

<h2>{{ przedmiot.getNazwa }}</h2>
Prowadzący: {{ przedmiot.getIdOsoby.getNazwisko }}
<br />


{% if kursy is empty %} 
<br />
Brak kursów dla wybranego przedmiotu
{% else %}


<table>
    <tr>
        <th width="30%">Termin</th>
        <th width="40%">Prowadzący</th>
        <th width="15%">Sala</th>
        <th width="15%">Rodzaj</th>
    </tr>


    {% for kurs in kursy %}

        <tr>
            <td><a href="#">{{ kurs.getTermin|date("D,  G:i ") }}</a></td>
            <td>{{ kurs.getIdOsoby.getNazwisko}}</td>
            <td>{{ kurs.getSala }}</td>
            <td>
                {% if (kurs.getTypZajec == 'l') %} laboratorium
                    {% elseif (kurs.getTypZajec == 'w') %} wykład
                    {% elseif (kurs.getTypZajec == 'c') %} ćwiczenia
                    {% elseif (kurs.getTypZajec == 'p') %} projekt
                {% endif %}
            </td>
        </tr>



    {% endfor %}
</table>



{% endif %}
{% endblock %}

